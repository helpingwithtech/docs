{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "eggz Help Center",
"colors": {
  "primary": "#F5B20B",
  "light": "#F5B20B",
  "dark": "#F7C132"
},
"fonts": {
  "family": "Roboto"
},
"description": "eggz connects your email to Xero in two minutes or less. Automate your invoices, bills, and more.",
  "favicon": "/eggz-logo.png",
  "navigation": {
    "tabs": [
      {
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Bills",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Invoices",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "Account Management",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://help.eggz.ai",
          "icon": "book-open-cover"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/eggz-logo-full.webp",
    "dark": "/logo/eggz-logo-full.webp"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@eggz.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.eggz.ai"
    }
  },
  "contextual": {
    "options": [
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "copy",
     "view"
   ]
  },
  "footer": {
    "socials": {
      "youtube": "https://www.youtube.com/@eggz-ai",
      "linkedin": "https://linkedin.com/company/eggzai"
    }
  }
}
